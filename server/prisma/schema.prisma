generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  username       String          @unique
  email          String          @unique
  password       String
  score          Int             @default(0)
  role           UserRole        @default(USER)
  isActive       Boolean         @default(true)
  deletedAt      DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  picks          Pick[]
  passwordResets PasswordReset[]
  auditLogs      AuditLog[]
}

enum UserRole {
  USER
  ADMIN
}

model Team {
  id           Int       @id @default(autoincrement())
  name         String
  city         String
  abbreviation String    @unique
  logoUrl      String?
  conference   String?
  division     String?
  
  homeMatchups Matchup[] @relation("HomeTeam")
  awayMatchups Matchup[] @relation("AwayTeam")
  picks        Pick[]
}

model Matchup {
  id         Int         @id @default(autoincrement())
  week       Int
  stage      SeasonStage @default(REGULAR)
  startTime  DateTime
  isFinished Boolean     @default(false)
  
  homeTeamId Int
  homeTeam   Team        @relation("HomeTeam", fields: [homeTeamId], references: [id])
  
  awayTeamId Int
  awayTeam   Team        @relation("AwayTeam", fields: [awayTeamId], references: [id])
  
  homeScore  Int?
  awayScore  Int?
  winnerId   Int?
  
  picks      Pick[]
}

model Pick {
  id             Int     @id @default(autoincrement())
  userId         Int
  user           User    @relation(fields: [userId], references: [id])
  
  matchupId      Int
  matchup        Matchup @relation(fields: [matchupId], references: [id])
  
  selectedTeamId Int
  selectedTeam   Team    @relation(fields: [selectedTeamId], references: [id])
  
  isCorrect      Boolean?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([userId, matchupId])
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  key       String   // Clave de 6 d√≠gitos
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  action    String   // e.g., "FORGOT_PASSWORD_REQUEST", "PASSWORD_RESET_SUCCESS"
  details   String?
  ip        String?
  createdAt DateTime @default(now())
}

model AppSetting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

enum SeasonStage {
  REGULAR
  WILDCARD
  DIVISIONAL
  CONFERENCE
  SUPERBOWL
}
