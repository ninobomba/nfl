generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  username       String          @unique
  email          String          @unique
  password       String
  score          Int             @default(0)
  role           UserRole        @default(USER)
  isActive       Boolean         @default(true)
  deletedAt      DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  picks          Pick[]
  passwordResets PasswordReset[]
  auditLogs      AuditLog[]
}

enum UserRole {
  USER
  ADMIN
}

model Team {
  id           String    @id @default(uuid())
  name         String
  city         String
  abbreviation String    @unique
  logoUrl      String?
  conference   String?
  division     String?
  
  homeMatchups Matchup[] @relation("HomeTeam")
  awayMatchups Matchup[] @relation("AwayTeam")
  picks        Pick[]
}

model Matchup {
  id         String      @id @default(uuid())
  week       Int
  stage      SeasonStage @default(REGULAR)
  startTime  DateTime
  isFinished Boolean     @default(false)
  
  homeTeamId String
  homeTeam   Team        @relation("HomeTeam", fields: [homeTeamId], references: [id])
  
  awayTeamId String
  awayTeam   Team        @relation("AwayTeam", fields: [awayTeamId], references: [id])
  
  homeScore  Int?
  awayScore  Int?
  winnerId   String?
  
  picks      Pick[]
}

model Pick {
  id             String  @id @default(uuid())
  userId         String
  user           User    @relation(fields: [userId], references: [id])
  
  matchupId      String
  matchup        Matchup @relation(fields: [matchupId], references: [id])
  
  selectedTeamId String
  selectedTeam   Team    @relation(fields: [selectedTeamId], references: [id])
  
  isCorrect      Boolean?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([userId, matchupId])
}

model PasswordReset {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  key       String   // Clave de 6 d√≠gitos
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String   // e.g., "FORGOT_PASSWORD_REQUEST", "PASSWORD_RESET_SUCCESS"
  details   String?
  ip        String?
  createdAt DateTime @default(now())
}

model AppSetting {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

enum SeasonStage {
  REGULAR
  WILDCARD
  DIVISIONAL
  CONFERENCE
  SUPERBOWL
}